{% extends 'base.html.twig' %}


{% form_theme form  'bootstrap_4_layout.html.twig' %}

{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-success flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h1>Newsletter</h1>

    {{ form_start(form) }}

    {{ form_row(form.mail,{'label': 'Email' , 'attr' : { 'placeholder': 'Saisir votre email'}}) }}

    <button type="submit" class="btn btn-info">Envoi de la Newsletter</button>



    {{ form_end(form) }}

{% endblock %}




