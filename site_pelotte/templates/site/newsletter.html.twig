{% extends 'base.html.twig' %}
{% form_theme formNewsletter  'bootstrap_4_layout.html.twig' %}
{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-success flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h1 align="center" id="title_news">Newsletter</h1>

    {{ form_start(formNewsletter) }}

    {{ form_row(formNewsletter.mail,{'label': 'Email' , 'attr' : { 'placeholder': 'Saisir votre email'}}) }}

    <button type="submit" class="btn btn-info" id="btn_news">Envoi de la Newsletter</button>



    {{ form_end(formNewsletter) }}

{% endblock %}