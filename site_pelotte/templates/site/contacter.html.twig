{% extends 'base.html.twig' %}
{% form_theme formContacter  'bootstrap_4_layout.html.twig' %}
{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-success flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div id="coordonées">
        <h1>Coordonées :</h1>
        <p>Association du pilotari gujannais</p>
        <p>60 allée Edouard Branly</p>
        <p>33470 Gujan-Mestras</p>
        <p>TEL : 05 56 66 79 92</p>
        <p>@ : TOTO@hotmail.fr</p>
    </div>
    <h2 align="center">Nous contacter</h2>
    {{ form_start(formContacter) }}

    {{ form_row(formContacter.nom, {'attr' : {'placeholder': "Mettez votre nom"}}) }}
    {{ form_row(formContacter.mail, {'attr' : {'placeholder': "Mettez votre mail"}}) }}
    {{ form_row(formContacter.objet, {'attr' : {'placeholder': "Ecrire l'objet de votre message"}}) }}
    {{ form_row(formContacter.message, {'attr' : {'placeholder': "Ecrire votre message"}}) }}

    <button type="submit" class="btn btn-info">Envoyer</button>
    {{ form_widget(formContacter) }}

    {{ form(formContacter) }}
{% endblock %}